<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#37393D40"
    android:orientation="vertical"
    tools:context=".activity.ProfileFragment">

    <LinearLayout
        android:id="@+id/editProfile"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/mediumGray">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/imgAvartar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/man"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNameCus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Thanh Bằng"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

    </LinearLayout>

    <TextView
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Đổi mật khẩu"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@color/white"
        android:padding="7dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/Transaction_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Lịch sử mua hàng"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@color/white"
        android:padding="7dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tvDieuKhoang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Điều khoảng và chính sách"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@color/white"
        android:padding="7dp"
        android:layout_marginTop="2dp"/>

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_btn_design"
        android:text="Đăng xuất"
        android:textColor="@color/white"/>

</LinearLayout>